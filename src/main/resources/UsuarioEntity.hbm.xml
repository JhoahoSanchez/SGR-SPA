<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="epn.edu.ec.model.UsuarioEntity" table="usuario" schema="sgr">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="correo">
            <column name="correo" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="rol">
            <column name="rol" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>